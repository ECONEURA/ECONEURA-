{
  "name": "econeura-ia",
  "private": true,
  "packageManager": "pnpm@8.15.5",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:web": "pnpm --filter @econeura/web dev",
    "dev:api": "pnpm --filter @econeura/api dev",
    "build": "pnpm run --parallel build",
    "build:web": "pnpm --filter @econeura/web build",
    "build:api": "pnpm --filter @econeura/api build",
    "test": "vitest run --coverage",
    "pretest": "node ./scripts/ensure-local-react.js",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "eslint \"packages/**/src/**\" \"apps/**/src/**\" \"scripts/**\"",
    "lint:fix": "eslint \"packages/**/src/**\" \"apps/**/src/**\" \"scripts/**\" --fix",
    "ci-check": "pnpm -w run lint && pnpm -w run typecheck && pnpm -w run test",
    "typecheck": "node ./scripts/run-tsc.js --noEmit",
    "typecheck:watch": "node ./scripts/run-tsc.js --noEmit --watch",
    "clean": "pnpm run --parallel clean && rm -rf node_modules/.cache",
    "prepare": "husky install",
    "coverage:check": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\run_one_shot_check.ps1",
    "coverage:enforce": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\enforce_coverage.ps1",
    "check:forbidden": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\check_forbidden_files.ps1"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "husky": "^9.1.6",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.44.1",
    "undici": "^7.16.0",
    "vitest": "^2.1.9"
  },
  "pnpm": {
    "overrides": {
      "react": "18.3.1",
      "react-dom": "18.3.1",
        "fast-redact": "3.5.0"
    }
  }
}
