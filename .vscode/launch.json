{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch API Server",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/apps/api_server.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug React App",
      "type": "chrome",
      "request": "launch",
      "url": "http://127.0.0.1:5500",
      "webRoot": "${workspaceFolder}/apps/web/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    }
  ]
}
